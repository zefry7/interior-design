mixin projectSection()
    section.project-section
        p.project-section__label OUR PROJECT
        .project-section__title-row
            h2.project-section__title Our Latest Projects
            ul.project-section__categors
                li.project-section__item 
                    input(type="radio" class="project-section__item-input" data-type="0" name="categor" checked)
                    span All
                li.project-section__item 
                    input(type="radio" class="project-section__item-input" data-type="1" name="categor")
                    span Architecture
                li.project-section__item 
                    input(type="radio" class="project-section__item-input" data-type="0" name="categor")
                    span Construction
                li.project-section__item 
                    input(type="radio" class="project-section__item-input" data-type="1" name="categor")
                    span Interior Design
        .project-section__list-project
